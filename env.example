# ============================================
# Yuki Admin Console - Environment Variables
# ============================================
# Copy this file to .env.local and fill in the values
# .env.local is gitignored and will not be committed

# ============================================
# Fillout/Zite Database Configuration
# ============================================

# Fillout API Token (Server-side only)
# Map from: FILLOUT_API_KEY (below) → Use as FILLOUT_API_TOKEN
FILLOUT_API_TOKEN=

# Fillout API Key (from your existing setup)
# Use this value for FILLOUT_API_TOKEN above
FILLOUT_API_KEY=

# Fillout Base URL (API endpoint)
# Default: https://tables.fillout.com/api/v1/bases
# Use your FILLOUT_BASE_URL value if you have it
FILLOUT_BASE_URL=https://tables.fillout.com/api/v1/bases

# Fillout Database ID (Base ID)
# This is the main database ID - same for all tables
# Primary database: aa7a307dc0a191a5
FILLOUT_BASE_ID=aa7a307dc0a191a5

# ============================================
# Fillout Table and Field IDs
# ============================================
# NOTE: Table and field IDs are now auto-generated from the Fillout API
# and stored in lib/fillout-config.generated.ts
#
# To regenerate the config file, run:
#   npx tsx scripts/generate-fillout-config.ts
#
# The config file is version-controlled and contains all table IDs and
# field IDs discovered from your Fillout database. Only the API token
# needs to be in this .env.local file.
#
# Table IDs are available via:
#   import { getTableId } from '@/lib/fillout-table-ids';
#   const tableId = getTableId('Employees');
#
# Field IDs are available via:
#   import { getFieldId } from '@/lib/fillout-table-ids';
#   const fieldId = getFieldId('Employee Pay Rates', 'employee_id');
#
# Or use the exported constants directly from lib/fillout-table-ids.ts

# ============================================
# Firebase Configuration
# ============================================

# Firebase Project ID
# From docs: dnc-time-tracker
FIREBASE_PROJECT_ID=dnc-time-tracker

# Firebase Admin SDK - Private Key
# Get from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
# Format: "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# Important: Keep the \n characters - they will be replaced with actual newlines
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Firebase Admin SDK - Client Email
# Get from: Firebase Console → Project Settings → Service Accounts
# Format: firebase-adminsdk-xxxxx@dnc-time-tracker.iam.gserviceaccount.com
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@dnc-time-tracker.iam.gserviceaccount.com

# Firebase Client Config (Public - safe to expose)
# Get from: Firebase Console → Project Settings → General → Your apps → Web app config

# Firebase API Key (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=

# Firebase Auth Domain (Public)
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=dnc-time-tracker.firebaseapp.com

# Firebase Project ID (Public - same as above)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=dnc-time-tracker

# ============================================
# Anthropic Claude API (for AI features - optional for now)
# ============================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/ → API Keys
# Format: sk-ant-...
# Note: Optional for now, needed for AI view generation (Milestone 6)
ANTHROPIC_API_KEY=

# ============================================
# Other Fillout Configurations (from your existing setup)
# ============================================

# Fillout API Key for Testimonials (Different Fillout Application)
FILLOUT_TESTIMONIALS_API_KEY=

# Fillout Database ID for Testimonials
FILLOUT_TESTIMONIALS_DB_ID=

# Fillout Table IDs
FILLOUT_COLLECTIONS_TABLE_ID=
FILLOUT_COLLECTION_TESTIMONIALS_TABLE_ID=
FILLOUT_TESTIMONIALS_TABLE_ID=

# ============================================
# Beehiiv Newsletter Integration (from your existing setup)
# ============================================

# Your Beehiiv API Key
# Found in: Beehiiv Dashboard → Settings → API → API Keys
NEXT_PUBLIC_BEEHIIV_API_KEY=
BEEHIIV_API_KEY=

# Your Beehiiv Publication ID
# Found in: Beehiiv Dashboard → Settings → API → Publication ID
NEXT_PUBLIC_BEEHIIV_PUBLICATION_ID=
BEEHIIV_PUBLICATION_ID=